{
  "name":"HelloWorld",
  "pomFile": {"groupId":"br.com.tarek", "artifactId":"HelloWorld", "description":"Testing the Generator", "javaVersion":"1.7"},
  "beans":[
    {"name":"Hello", "scope":"SESSION", "fields":[{"type":"String", "name":"name"}]}
  ],
  "views":[
    {"name":"hello", "title":"Hello World", "welcomeFile":true, "actions": [
      {"actionType":"DISPLAY", "value":"Name:"},
      {"actionType":"ASSIGN", "value":"#{helloBean.name}"},
      {"actionType":"BUTTON", "value":"hello-result"}
    ]},
    {"name":"hello-result", "title":"Hello World", "actions":[{"actionType":"DISPLAY", "value":"Hello, #{helloBean.name}"}]}
  ]
}